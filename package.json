{
  "name": "ai-genomics-assistant",
  "version": "1.0.0",
  "description": "AI-powered genomics analysis assistant with JBrowse 2 integration",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && python -m uvicorn app.main:app --reload --host 0.0.0.0 --port 8000",
    "install:all": "npm install && cd frontend && npm install && cd ../backend && pip install -r requirements.txt",
    "build:frontend": "cd frontend && npm run build",
    "lint": "cd frontend && npm run lint",
    "setup": "npm run install:all"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
